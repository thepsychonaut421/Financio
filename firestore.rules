rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Rules for 'invoices' collection
    match /invoices/{invoiceId} {
      allow read, write: if isAuthenticated();
      // Further restrictions can be added, e.g., only owner can write
      // allow write: if isAuthenticated() && request.auth.uid == resource.data.uploaderId;
    }

    // Rules for 'vendors' collection (if used)
    match /vendors/{vendorId} {
       allow read: if isAuthenticated();
       allow create, update: if isAuthenticated(); // Or restrict to specific roles
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
